xterm*faceName: DejaVu Sans Mono Book
xterm*faceSize: 16

! Number of visible lines in a terminal session
xterm*savelines: 4096

! Do not scroll the terminal
xterm*scrollTtyOutput: false

! Make Ctrl+Shift+C and Ctrl+Shift+V  work
xterm*VT100*translations: #override\n\
    Shift Ctrl <KeyPress> v:insert-selection(CLIPBOARD)\n\
    Shift Ctrl <KeyPress> c:copy-selection(CLIPBOARD)

! Make Alt+. work
xterm*eightBitInput: false
xterm*eightBitOutput: true

! Colors
*background: #1d2021
*foreground: #ebdbb2
*color0:  #282828
*color1:  #cc241d
*color2:  #98971a
*color3:  #d79921
*color4:  #458588
*color5:  #b16286
*color6:  #689d6a
